<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id = "@+id/layout_edit_password"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EditPasswordActivity">

    <TextView
        android:id="@+id/textViewEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter old password" />

    <EditText
        android:id="@+id/editTextEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textViewEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter new password" />
    <EditText
        android:id="@+id/editTextEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE" />
</LinearLayout>